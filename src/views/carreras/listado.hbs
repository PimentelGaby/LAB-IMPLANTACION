        <div class="col-md-12">
            <a href="/carreras/agregar" class="btn btn-success mb-4">Agregar Carrera</a>
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripci√≥n</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each carreras}}
                    <tr>
                        <td>{{idcarrera}}</td>
                        <td>{{nombre}}</td>
                        <td>{{descripcion}}</td>
                        <td>
                            <a href="/carreras/modificar/{{idcarrera}}" class="btn btn-primary">Modificar</a>
                            <a href="/carreras/eliminar/{{idcarrera}}" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
