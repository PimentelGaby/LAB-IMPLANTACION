<div class="container my-5">
    <!-- Título -->
    <div class="row justify-content-center">
        <h1 class="text-center text-info fw-bold">Modificar Carrera</h1>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h4>Editar Información</h4>
                </div>
                <div class="card-body bg-light">
                    <form action="/carreras/modificar/{{carrera.idcarrera}}" method="POST">
                        <div class="mb-3">
                            <label for="idcarrera" class="form-label">Código de Carrera</label>
                            <input 
                                type="text" 
                                id="idcarrera" 
                                class="form-control" 
                                name="idcarrera" 
                                value="{{carrera.idcarrera}}" 
                                placeholder="Ejemplo: I01" 
                                required 
                                autofocus />
                        </div>
                        <div class="mb-3">
                            <label for="carrera" class="form-label">Nombre de la Carrera</label>
                            <input 
                                type="text" 
                                id="carrera" 
                                class="form-control" 
                                name="carrera" 
                                value="{{carrera.carrera}}" 
                                placeholder="Ejemplo: Ingeniería en Sistemas Computacionales" 
                                required />
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-info">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
