<div class="container p-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-info">Modificar Profesor</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form action="/profesores/modificar/{{profesor.idprofesor}}" method="POST" class="p-4 border rounded shadow-sm bg-light">
                <!-- Campo para Código del Profesor -->
                <div class="form-group">
                    <label for="idprofesor" class="font-weight-bold">Código del Profesor</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="idprofesor" 
                        name="idprofesor" 
                        placeholder="Ejemplo: PROF123" 
                        value="{{profesor.idprofesor}}" 
                        maxlength="50" 
                        required 
                        autofocus 
                        readonly/>
                </div>

                <!-- Campo para Nombre -->
                <div class="form-group">
                    <label for="nombre" class="font-weight-bold">Nombre</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="nombre" 
                        name="nombre" 
                        placeholder="Ejemplo: Juan" 
                        value="{{profesor.nombre}}" 
                        maxlength="100" 
                        required />
                </div>

                <!-- Campo para Apellido -->
                <div class="form-group">
                    <label for="apellido" class="font-weight-bold">Apellido</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="apellido" 
                        name="apellido" 
                        placeholder="Ejemplo: Pérez" 
                        value="{{profesor.apellido}}" 
                        maxlength="100" 
                        required />
                </div>

                <!-- Campo para Fecha de Nacimiento -->
                <div class="form-group">
                    <label for="fecha_nacimiento" class="font-weight-bold">Fecha de Nacimiento</label>
                    <input 
                        type="date" 
                        class="form-control" 
                        id="fecha_nacimiento" 
                        name="fecha_nacimiento" 
                        value="{{formatDateEdit profesor.fecha_nacimiento}}" 
                        required />
                </div>

                <!-- Campo para Profesión -->
                <div class="form-group">
                    <label for="profesion" class="font-weight-bold">Profesión</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="profesion" 
                        name="profesion" 
                        placeholder="Ejemplo: Ingeniero en Sistemas" 
                        value="{{profesor.profesion}}" 
                        maxlength="100" 
                        required />
                </div>

                <!-- Campo para Género -->
                <div class="form-group">
                    <label class="font-weight-bold">Género</label>
                    <div class="d-flex">
                        <div class="form-check me-3">
                            <input 
                                class="form-check-input" 
                                type="radio" 
                                name="genero" 
                                id="M" 
                                value="M" 
                                {{#eq "M" profesor.genero}}checked{{/eq}} 
                                required />
                            <label class="form-check-label" for="M">Masculino</label>
                        </div>
                        <div class="form-check ml-2">
                            <input 
                                class="form-check-input" 
                                type="radio" 
                                name="genero" 
                                id="F" 
                                value="F" 
                                {{#eq "F" profesor.genero}}checked{{/eq}} 
                                required />
                            <label class="form-check-label" for="F">Femenino</label>
                        </div>
                    </div>
                </div>

                <!-- Campo para Correo -->
                <div class="form-group">
                    <label for="email" class="font-weight-bold">Correo Electrónico</label>
                    <input 
                        type="email" 
                        class="form-control" 
                        id="email" 
                        name="email" 
                        placeholder="Ejemplo: profesor@ejemplo.com" 
                        value="{{profesor.email}}" 
                        required />
                </div>

                <!-- Botón para Guardar Cambios -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-info btn-block">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
