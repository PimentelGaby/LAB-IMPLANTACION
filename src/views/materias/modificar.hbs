<div class="container my-5">
    <div class="row justify-content-center">
        <h1 class="text-center text-info fw-bold">Modificar Materia</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h4>Editar Información</h4>
                </div>
                <div class="card-body bg-light">
                    <form action="/materias/modificar/{{materia.idmateria}}" method="POST">
                        <div class="mb-3">
                            <label for="idmateria" class="form-label">Código de Materia</label>
                            <input 
                                type="text" 
                                id="idmateria" 
                                class="form-control" 
                                name="idmateria" 
                                value="{{materia.idmateria}}" 
                                placeholder="Ejemplo: M01" 
                                required 
                                readonly />
                        </div>
                        <div class="mb-3">
                            <label for="materia" class="form-label">Nombre de la Materia</label>
                            <input 
                                type="text" 
                                id="materia" 
                                class="form-control" 
                                name="materia" 
                                value="{{materia.materia}}" 
                                placeholder="Ejemplo: Física Avanzada" 
                                required />
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-info">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
